<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_Pemob_Techie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Project_Pemob_Techie.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/yellow</item>
    </style>

    <style name="Theme.Project_Pemob_Techie.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/yellow</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="RoundPicture">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/rounded_corner_button</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/super_rounded_corner_button</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AddToCartButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/add_to_cart_button</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

</resources>